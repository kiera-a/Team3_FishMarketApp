<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>FISHMART</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">FISHMART</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addFish">Add new fish</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <br />
    <div class="text-center">
      <h2>Fish List</h2>
    </div>
    <br />
    <table class="table table-hover text-center">
      <head>
        <tr>
          <th>Fish Name</th>
          <th>Image</th>
          <th>Weight (kg)</th>
          <th>Type</th>
          <th>Length (cm)</th>
          <th>Price ($)</th>
          <th>Diet & Use</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </head>
      <body>
        <% for(let i = 0; i < fishList.length; i++) { %>
          <tr>
            <td><a href="/fish/<%= fishList[i].fishId %>"><%= fishList[i].name %></a></td>
            <td><img src="/images/<%= fishList[i].image %>" width="80" /></td>
            <td><%= fishList[i].weight %></td>
            <td><%= fishList[i].type %></td>
            <td><%= fishList[i].length %></td>
            <td>$<%= fishList[i].price.toFixed(2) %></td>
            <td><%= fishList[i].diet %></td>
            <td><a href="/editFish/<%= fishList[i].fishId %>">Edit</a></td>
            <td><a href="/deleteFish/<%= fishList[i].fishId %>" onclick="return confirm('Are you sure you want to delete this fish?')">Delete</a></td>
          </tr>
        <% } %>
      </body>
    </table>
  </div>
</body>
</html>