<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>FISHMART</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">FISHMART</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addFish">Add New Fish</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="text-center mb-4">
      <h2>Fish List</h2>
    </div>

    <% if (fishList.length === 0) { %>
      <div class="alert alert-warning text-center">No fish found in the database.</div>
    <% } else { %>
      <table class="table table-hover text-center table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>Fish Name</th>
            <th>Image</th>
            <th>Weight (kg)</th>
            <th>Type</th>
            <th>Length (cm)</th>
            <th>Price ($)</th>
            <th>Diet & Use</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% fishList.forEach(fish => { %>
            <tr>
              <td><a href="/fish/<%= fish.fishId %>"><%= fish.name %></a></td>
              <td><img src="/images/<%= fish.image %>" alt="Fish Image" style="width: 80px;" class="img-thumbnail" /></td>
              <td><%= fish.weight %></td>
              <td><%= fish.type %></td>
              <td><%= fish.length %></td>
              <td>$<%= fish.price.toFixed(2) %></td>
              <td><%= fish.diet_use %></td>
              <td>
                <a href="/editFish/<%= fish.fishId %>" class="btn btn-sm btn-warning">Edit</a>
              </td>
              <td>
                <a href="/deleteFish/<%= fish.fishId %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this fish?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
